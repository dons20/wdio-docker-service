{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node16",
        "skipLibCheck": true,
        "types": [
            "node",
            "@types/mocha",
            "@wdio/globals/types",
            "@wdio/mocha-framework"
        ],
        "typeRoots": ["./node_modules", "./node_modules/@types"]
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules/**", "**/__tests__/*.spec.ts", "lib/**/*"]
}
