{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node10",
        "allowImportingTsExtensions": true,
        "declaration": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"],
            "@test/*": ["./test/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "@types/mocha",
            "@wdio/globals/types",
            "@wdio/mocha-framework"
        ],
        "typeRoots": ["./node_modules", "./node_modules/@types"],
    },
    "ts-node": {
        "files": true,
        "transpileOnly": true,
        "esm": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./node_modules/**", "./lib/**/*"]
}
