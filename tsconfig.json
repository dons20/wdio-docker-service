{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node16",
        "types": [
            "node",
            "@types/mocha",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
        ],
        "typeRoots": ["./node_modules", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__/*.spec.ts", "lib/**/*"],
}
